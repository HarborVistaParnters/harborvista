---
import Image from '../Image.astro';
import Button from '../Button.astro';
// import bgImage from '../../assets/palms.jpg'

const { id } = Astro.props;

import * as siteSettings from "../../content/settings/Harbor-Vista.md"

const bgImage = "src/assets/palms.jpg"
---

<article id={id} class="relative bg-neutral-100 pt-28 pb-20 my-32">
    <div class="max-w-7xl mx-auto px-8 xl:px-4 grid md:grid-cols-2 gap-16 items-center relative z-[2]">
        <div class="text-brand-400 space-y-6">
            <h2 class="text-3xl font-semibold">{siteSettings.frontmatter.calloutHeader}</h2>
            <p>{siteSettings.frontmatter.calloutText}</p>
        </div>
        <div class="lg:justify-self-center">
            <form name="newsletter-signup" method="POST" netlify-honeypot="bot-field" data-netlify="true" class="flex items-center gap-4 flex-wrap">
                <p class="hidden"><label>Don't fill this out if you are human: <input name="bot-field" /></label></p>
                <label for="email" class="sr-only">Email</label>
                <input type="email" name="email" placeholder="Enter your email" class="py-[0.6rem] px-4 min-w-[20rem] rounded-lg shadow-md shadow-brand-700/10 focus-visible:outline-brand-400">
                <Button type="submit">
                    Sign Up
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="relative -top-[0.5px] w-4 h-4 transition-transform group-hover:translate-x-1">
                        <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
                    </svg>
                </Button>
            </form>
        </div>
    </div>
    <div class="absolute right-0 top-0 bottom-0 w-1/3 opacity-gradient">
        <Image src={bgImage} alt="Palm trees." class="w-full h-full object-cover saturate-0 mix-blend-multiply opacity-30" />
        <!-- <img src={bgImage} alt="" class="w-full h-full object-cover saturate-0 mix-blend-multiply opacity-30"> -->
    </div>
</article>

<style>
    .opacity-gradient {
        -webkit-mask-image: linear-gradient(to left, black, transparent);
        mask-image: linear-gradient(to left, black, transparent);
    }
</style>