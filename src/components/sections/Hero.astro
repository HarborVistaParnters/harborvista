---
import Image from '../Image.astro';
import Button from '../Button.astro';
// import heroBg from '../../assets/lb-2.jpg';

const heroBg = 'src/assets/lb-2.jpg'

const { id, title, description } = Astro.props;
---

<article id={id} class="relative h-[90vh] lg:h-[80vh] overflow-hidden">
    <!-- Text Wrapper -->
    <div class="relative h-full z-10 flex flex-col justify-end items-center text-center max-w-3xl mx-auto gap-y-8 px-4 py-8">
        <h1 class="text-6xl font-semibold tracking-[0.2rem] uppercase text-white">{title}</h1>
        <p class="text-lg text-brand-300">{description}</p>
        <!-- button group -->
        <div class="flex justify-center items-center flex-wrap gap-6">
            <Button href="#portfolio">
                Learn More
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="relative -top-[0.5px] w-4 h-4 transition-transform group-hover:translate-x-1">
                    <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
                </svg>
            </Button>
            <Button theme="outline-white">
                Investors
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="relative -top-[0.5px] w-4 h-4 transition-transform group-hover:translate-x-1">
                    <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
                </svg>
            </Button>
        </div>
    </div>
    <!-- Overlay -->
    <div class="absolute left-0 bottom-0 right-0 h-2/3 z-[2] bg-gradient"></div>
    <!-- Image -->
    <Image src={heroBg} alt="Long Beach harbor at sunset." class="absolute inset-0 h-full w-full object-cover" />
    <!-- <img src={heroBg} alt="" class="absolute inset-0 h-full w-full object-cover"> -->
</article>
<svg preserveAspectRatio="xMidYMid meet" viewBox="0 0 1440 118" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full relative aspect-[1440/118] mb-32">
    <path d="M1440 0H0V67C280.5 134 1100.5 134 1440 67V0Z" fill="url(#paint0_linear_79_25)"/>
    <defs>
    <linearGradient id="paint0_linear_79_25" x1="720.5" y1="0" x2="720.5" y2="120" gradientUnits="userSpaceOnUse">
    <stop stop-color="#063963"/>
    <stop offset="1" stop-color="#12558D"/>
    </linearGradient>
    </defs>
</svg>

<style>
    .bg-gradient {
        background: linear-gradient(to top, theme(colors.brand.700) 20%, theme(colors.brand.700 / 0%) 100%)
    }
</style>