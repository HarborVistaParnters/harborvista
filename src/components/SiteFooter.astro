---
import Button from "./Button.astro";
const { navigation, investorLink, isHome } = Astro.props;

import * as siteSettings from "../content/settings/Harbor-Vista.md"
const copyright = new Date().getFullYear();
---
<footer class="mt-40">
    <div class="max-w-7xl mx-auto px-4">
        <div class="flex flex-col items-center pb-24 mb-6 border-b border-neutral-400/30">
            <div class="uppercase tracking-widest font-semibold text-brand-400">
                Harbor Vista
            </div>
            <div class="flex gap-8 items-center justify-center text-center flex-wrap mt-4">
                {navigation.map(item =>
                    <a href={item.frontmatter.external ? `${item.frontmatter.href}` : isHome ? `#${item.frontmatter.href}` : `/#${item.frontmatter.href}`} target={item.frontmatter.external ? "_blank" : ""} class="text-neutral-600 hover:text-neutral-700 hover:underline">{item.frontmatter.name}</a>
                )}
                <Button href={investorLink} target="_blank" size="small">Investors
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="relative -top-[0.5px] w-4 h-4 transition-transform group-hover:translate-x-1">
                        <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
                    </svg>
                </Button>
            </div>
        </div>
        <div class="text-sm flex justify-between pb-8">
            <div class="text-neutral-600">Â© {copyright} {siteSettings.frontmatter.title}</div>
            <div>
                <a href="/" class="text-neutral-600 hover:text-neutral-700 hover:underline">Disclaimer</a>
            </div>
        </div>
    </div>
</footer>