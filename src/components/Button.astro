---
const baseStyles = {
    base: "leading-none rounded-md inline-flex gap-1 justify-center items-center font-medium tracking-[0.15em] uppercase transition-colors group",
    link: "leading-none transition-colors group"
}

const themes = {
    base: {
        primary: "bg-brand-400 text-white border border-brand-400 hover:bg-brand-500",
        "outline-white": "bg-transparent text-white border border-white hover:bg-white hover:text-brand-400",
        nav: "bg-transparent text-brand-400 focus:bg-brand-300"
    },
    link: {
        primary: ""
    }
}

const sizes = {
    base: "text-sm py-3 px-4",
    small: "text-xs py-2 px-3",
    none: ""
}

const { style = "base", theme = "primary", size = "base", className, href, ...props } = Astro.props;

const classList = [baseStyles[style], themes[style][theme], sizes[size], className];
---

{
    href ? (
        <a href={href} class:list={classList} {...props}><slot>Link</slot></a>
    ) : (
        <button class:list={classList} {...props}><slot>Button</slot></button>
    )
}